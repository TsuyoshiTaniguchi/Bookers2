<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@book.errors.count, "error") %> prevented this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @book) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, name: "book[title]", class: "form-control", id: "book_title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book) %> | 
      <%= link_to "Back", books_path, class: "btn btn-secondary" %>



    </div>
  </div>
</div>