<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= pluralize(@book.errors.count, "error") %> prevented this book from being saved:</h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: books_path, method: :post, local: true, html: { class: "form-group styled-form" } do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "form-control", id: "book_title" %>
  </div>
  <div class="form-group">
    <label for="book_image">Image</label>
    <%= f.file_field :image, accept: "image/*", class: "form-control", id: "book_image" %>
  </div>
  <div class="form-group">
    <label for="book_body">Opinion</label>
    <%= f.text_area :body, class: "form-control", id: "book_body" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>