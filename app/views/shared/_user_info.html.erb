<div class="col-md-3">
     <% if user.present? %>
    <table class="table">
      <h2>User info</h2>
      <tbody>
        <%= image_tag(user.get_profile_image(100, 100), alt: "No Image") %>
        <tr><th>Name</th><td><%= user.name %></td></tr>
        <tr><th>Introduction</th><td><%= user.introduction || '' %></td></tr>
      </tbody>
    </table>
  <% else %>
    <p>ユーザー情報が取得できませんでした。</p>
  <% end %>

  <%= link_to edit_user_path(user.id), class: "btn btn-block btn-outline-secondary p-0 mt-3" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

  <!-- ユーザー情報更新フォーム -->
  <%= form_with model: @user, scope: :user, url: user_path(@user), method: :patch, local: true do |f| %>

  <% end %> 

  
 <!-- 書籍投稿フォーム -->
 <h2 class="mt-3">New book</h2>
 <%= form_with model: @book, scope: :book, url: books_path, method: :post, local: true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label :body %>
   <%= f.text_area :body, class: "form-control", value: "" %> 
  </div>


  <div class="form-group">
      <%= f.submit "Create Book", class: "btn btn-success", style: "padding: 8px 16px; font-size: 14px;" %>
    </div>
  <% end %>

</div>

